<div class="pagination">
    {{#if prev}}
        <a class="prev" href="{{page_url prev}}">← {{t "Newer posts"}}</a>
    {{/if}}
    <span class="page-number">{{t "Page {page} of {pages}" page=page pages=pages}}</span>
    {{#if next}}
        <a class="next" href="{{page_url next}}">{{t "Older posts"}} →</a>
    {{/if}}
</div>
