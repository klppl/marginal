{{!< default}}

{{#post}}

<article class="gh-article h-entry {{post_class}}">

    <header class="gh-header">
        <h1 class="gh-title p-name">{{title}}</h1>
        <div class="gh-post-meta">
            <time class="dt-published" datetime="{{date format="YYYY-MM-DD"}}">{{date format="DD MMM YYYY"}}</time>
            {{#if reading_time}}
                &middot; {{reading_time}}
            {{/if}}
        </div>

        {{#if custom_excerpt}}
        <p class="gh-excerpt p-summary">{{custom_excerpt}}</p>
        {{/if}}

        {{#if feature_image}}
        <figure class="gh-feature-image">
            <img src="{{img_url feature_image size="l"}}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" />
            {{#if feature_image_caption}}
                <figcaption>{{feature_image_caption}}</figcaption>
            {{/if}}
        </figure>
        {{/if}}
    </header>

    <div class="gh-content e-content">
        {{content}}
    </div>

    <footer class="gh-post-footer">
        <div class="gh-post-authors">
            {{#foreach authors}}
                <span class="p-author h-card">
                    {{t "Written by"}} <a class="p-name u-url" href="{{url}}">{{name}}</a>
                </span>
            {{/foreach}}
        </div>

        {{#if comments}}
        <section class="gh-post-comments">
            {{comments}}
        </section>
        {{/if}}
    </footer>

    <a class="u-url u-uid" href="{{url absolute="true"}}" hidden></a>

</article>

<aside class="gh-readmore">
    <div class="gh-readmore-inner">
        <div class="gh-readmore-next">
            {{#next_post}}<a href="{{url}}">&larr; {{title}}</a>{{/next_post}}
        </div>
        <div class="gh-readmore-prev">
            {{#prev_post}}<a href="{{url}}">{{title}} &rarr;</a>{{/prev_post}}
        </div>
    </div>
</aside>

{{/post}}
