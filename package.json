{
    "name": "spalt",
    "description": "An IndieWeb-inspired retro-minimalist Ghost theme",
    "version": "1.0.0",
    "engines": {
        "ghost": ">=5.0.0"
    },
    "license": "MIT",
    "author": {
        "name": "Spalt",
        "email": "hello@example.com"
    },
    "scripts": {
        "dev": "rollup -c --environment BUILD:development -w",
        "build": "rollup -c --environment BUILD:production",
        "zip": "npm run build && bestzip spalt-theme.zip assets/built/* assets/*.js assets/css/* *.hbs package.json locales/ partials/ members/",
        "test": "npm run build && npx gscan .",
        "pretest": "npm run build"
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme",
        "indieweb"
    ],
    "devDependencies": {
        "@rollup/plugin-commonjs": "^29.0.0",
        "@rollup/plugin-node-resolve": "^16.0.0",
        "@rollup/plugin-terser": "^0.4.0",
        "bestzip": "^2.2.1",
        "postcss": "^8.4.24",
        "postcss-import": "^16.0.0",
        "postcss-preset-env": "^10.0.0",
        "rollup": "^4.0.0",
        "rollup-plugin-livereload": "^2.0.5",
        "rollup-plugin-postcss": "^4.0.2"
    },
    "browserslist": [
        "defaults"
    ],
    "config": {
        "card_assets": true,
        "posts_per_page": 50,
        "custom": {
            "body_font": {
                "type": "select",
                "options": [
                    "System Sans",
                    "System Serif",
                    "Monospace"
                ],
                "default": "System Sans"
            }
        },
        "image_sizes": {
            "s": {
                "width": 300
            },
            "m": {
                "width": 600
            },
            "l": {
                "width": 1200
            },
            "xl": {
                "width": 2000
            }
        }
    },
    "type": "module"
}
