{
    "name": "marginal",
    "description": "An IndieWeb-inspired retro-minimalist Ghost theme",
    "version": "1.0.0",
    "engines": {
        "ghost": ">=5.0.0"
    },
    "license": "MIT",
    "author": {
        "name": "Marginal",
        "email": "hej@klippel.se"
    },
    "scripts": {
        "dev": "rollup -c --environment BUILD:development -w",
        "build": "rollup -c --environment BUILD:production",
        "zip": "npm run build && bestzip marginal-theme.zip assets/built/* assets/*.js assets/css/* *.hbs package.json locales/ partials/ members/",
        "test": "npx gscan .",
        "pretest": "npm run build"
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme",
        "indieweb"
    ],
    "devDependencies": {
        "bestzip": "^2.2.1",
        "postcss": "^8.4.24",
        "postcss-import": "^16.0.0",
        "postcss-preset-env": "^10.0.0",
        "rollup": "^4.0.0",
        "rollup-plugin-livereload": "^2.0.5",
        "rollup-plugin-postcss": "^4.0.2"
    },
    "browserslist": [
        "defaults"
    ],
    "config": {
        "card_assets": true,
        "posts_per_page": 50,
        "custom": {
            "body_font": {
                "type": "select",
                "options": [
                    "Inter",
                    "Source Sans",
                    "DM Sans",
                    "Space Grotesk",
                    "Libre Baskerville",
                    "JetBrains Mono",
                    "IBM Plex Mono",
                    "Courier Prime"
                ],
                "default": "Inter"
            },
            "body_font_size": {
                "type": "select",
                "options": [
                    "Small",
                    "Medium",
                    "Large"
                ],
                "default": "Medium"
            },
            "density": {
                "type": "select",
                "options": [
                    "Compact",
                    "Normal",
                    "Spacious"
                ],
                "default": "Normal"
            },
            "color_palette": {
                "type": "select",
                "options": [
                    "Default",
                    "Catppuccin Mocha",
                    "Dracula",
                    "Nord",
                    "Gruvbox",
                    "Tokyo Night",
                    "Rose Pine",
                    "Everforest"
                ],
                "default": "Default"
            },
            "show_excerpts": {
                "type": "boolean",
                "default": true,
                "group": "design"
            },
            "show_reading_progress": {
                "type": "boolean",
                "default": true,
                "group": "design"
            },
            "show_toc": {
                "type": "boolean",
                "default": true,
                "group": "design"
            },
            "show_related_posts": {
                "type": "boolean",
                "default": true,
                "group": "design"
            },
            "show_breadcrumbs": {
                "type": "boolean",
                "default": true,
                "group": "design"
            },
            "show_reading_time": {
                "type": "boolean",
                "default": true,
                "group": "design"
            },
            "show_prev_next": {
                "type": "boolean",
                "default": true,
                "group": "design"
            },
            "show_ghost_badge": {
                "type": "boolean",
                "default": true,
                "group": "design"
            },
            "show_author_byline": {
                "type": "boolean",
                "default": true,
                "group": "design"
            },
            "sidebar_width": {
                "type": "select",
                "options": [
                    "Narrow",
                    "Normal",
                    "Wide"
                ],
                "default": "Normal",
                "group": "design"
            },
            "layout_alignment": {
                "type": "select",
                "options": [
                    "Left",
                    "Off-center",
                    "Center"
                ],
                "default": "Center"
            }
        },
        "image_sizes": {
            "s": {
                "width": 300
            },
            "m": {
                "width": 600
            },
            "l": {
                "width": 1200
            },
            "xl": {
                "width": 2000
            }
        }
    },
    "type": "module"
}
